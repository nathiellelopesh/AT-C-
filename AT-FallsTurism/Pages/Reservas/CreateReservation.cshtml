@page "novaReserva"
@model AT_FallsTurism.Pages.Reservas.CreateReservationModel

@{
    ViewData["Title"] = "Nova Reserva";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="container mx-auto px-4 py-12 font-sans bg-gray-50 min-h-screen">
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-8 text-center rounded-lg py-4 px-6 bg-gradient-to-r from-blue-100 to-indigo-100 shadow-md">
        Realizar Nova Reserva
    </h1>

    @if (TempData["SuccessMessage"] != null) {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
            <strong class="font-bold">Sucesso!</strong>
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
        </div>
    }

    <div class="max-w-xl mx-auto bg-white rounded-xl shadow-lg p-8 border border-gray-200">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-6 p-3 bg-red-50 rounded-lg border border-red-200"></div>

            <div class="mb-5">
                <label asp-for="ReservaInput.ClienteId" class="block text-gray-700 text-sm font-bold mb-2">Cliente</label>
                <select asp-for="ReservaInput.ClienteId" asp-items="Model.ReservaInput.Clientes" class="shadow appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">-- Selecione um Cliente --</option>
                </select>
                <span asp-validation-for="ReservaInput.ClienteId" class="text-red-500 text-xs italic mt-1 block"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ReservaInput.PacoteTuristicoId" class="block text-gray-700 text-sm font-bold mb-2">Pacote Turístico</label>
                <select asp-for="ReservaInput.PacoteTuristicoId" asp-items="Model.ReservaInput.PacotesTuristicos" class="shadow appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">-- Selecione um Pacote Turístico --</option>
                </select>
                <span asp-validation-for="ReservaInput.PacoteTuristicoId" class="text-red-500 text-xs italic mt-1 block"></span>
            </div>

            <div class="flex flex-col sm:flex-row items-center justify-between mt-8 space-y-4 sm:space-y-0 sm:space-x-4">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg focus:outline-none focus:shadow-outline transition-colors duration-200 shadow-md hover:shadow-lg w-full sm:w-auto">
                    Realizar Reserva
                </button>
                <a asp-page="/Index" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800 transition-colors duration-200 w-full text-center sm:w-auto">
                    Voltar para a Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}