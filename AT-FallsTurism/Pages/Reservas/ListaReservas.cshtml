@page "/listaReserva"
@model AT_FallsTurism.Pages.Reservas.ListaReservasModel

@{
    ViewData["Title"] = "ListaReservas";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="container mx-auto px-4 py-12 font-sans bg-gray-50 min-h-screen">
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-8 text-center rounded-lg py-4 px-6 bg-gradient-to-r from-blue-100 to-indigo-100 shadow-md">
        Reservas
    </h1>

    @if (Model.Reserva == null || !Model.Reserva.Any()) {
        <div class="bg-yellow-50 border border-yellow-300 text-yellow-800 px-8 py-6 rounded-xl shadow-lg text-center mx-auto max-w-lg">
            <svg class="w-16 h-16 mx-auto mb-4 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <p class="font-bold text-xl mb-2">Você ainda não tem nenhuma reserva.</p>
            <p class="text-lg">Que tal fazer uma agora?</p>
        </div>
    } else {
        <div class="overflow-x-auto bg-white rounded-lg shadow-md border border-gray-200">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Reserva[0].Cliente.Nome)
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Reserva[0].Cliente.Email)
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Reserva[0].PacoteTuristico.Titulo)
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Reserva[0].DataReserva)
                        </th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Ações</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model.Reserva) {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                @Html.DisplayFor(modelItem => item.Cliente.Nome)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @Html.DisplayFor(modelItem => item.Cliente.Email)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @Html.DisplayFor(modelItem => item.PacoteTuristico.Titulo)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @Html.DisplayFor(modelItem => item.DataReserva)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a asp-page="/Reservas/Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 mr-4">Editar</a>
                                <a asp-page="/Reservas/Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
