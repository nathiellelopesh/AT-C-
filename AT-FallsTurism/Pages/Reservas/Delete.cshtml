@page
@model AT_FallsTurism.Pages.Reservas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="container mx-auto px-4 py-12 font-sans bg-gray-50 min-h-screen">
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6 text-center rounded-lg py-4 px-6 bg-gradient-to-r from-red-100 to-pink-100 shadow-md">
        Excluir Reserva
    </h1>

    <div class="max-w-md mx-auto bg-white rounded-xl shadow-lg p-8 border border-gray-200">
        <h3 class="text-xl md:text-2xl font-semibold text-gray-800 mb-6 text-center">
            Tem certeza que deseja excluir esta reserva?
        </h3>

        <div class="mb-6">
            <h4 class="text-lg font-bold text-gray-700 mb-4">Detalhes da Reserva</h4>
            <hr class="mb-4 border-gray-200" />
            <dl class="space-y-3">
                <div class="flex items-center">
                    <dt class="w-1/3 text-gray-600 font-medium">@Html.DisplayNameFor(model => model.Reserva.Cliente)</dt>
                    <dd class="w-2/3 text-gray-800">@(Model.Reserva.Cliente != null ? Model.Reserva.Cliente.Nome : "N/A")</dd>
                </div>
                <div class="flex items-center">
                    <dt class="w-1/3 text-gray-600 font-medium">@Html.DisplayNameFor(model => model.Reserva.PacoteTuristico)</dt>
                    <dd class="w-2/3 text-gray-800">@(Model.Reserva.PacoteTuristico != null ? Model.Reserva.PacoteTuristico.Titulo : "N/A")</dd>
                </div>
                <div class="flex items-center">
                    <dt class="w-1/3 text-gray-600 font-medium">@Html.DisplayNameFor(model => model.Reserva.DataReserva)</dt>
                    <dd class="w-2/3 text-gray-800">@Html.DisplayFor(model => model.Reserva.DataReserva)</dd>
                </div>
            </dl>
        </div>

        <form method="post" class="flex flex-col sm:flex-row items-center justify-between mt-8 space-y-4 sm:space-y-0 sm:space-x-4">
            <input type="hidden" asp-for="Reserva.Id" />
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg focus:outline-none focus:shadow-outline transition-colors duration-200 shadow-md hover:shadow-lg w-full sm:w-auto">
                Confirmar Exclusão
            </button>
            <a asp-page="/Reservas/ListaReservas" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800 transition-colors duration-200 w-full text-center sm:w-auto">
                Cancelar e Voltar
            </a>
        </form>
    </div>
</div>