@page "/PacoteDetails/{id}"
@model AT_FallsTurism.Pages.PacotesTuristicos.PacoteDetailsModel

@{
    ViewData["Title"] = "PacoteDetails";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="container mx-auto px-4 py-12 font-sans bg-gray-50 min-h-screen">
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-8 text-center rounded-lg py-4 px-6 bg-gradient-to-r from-green-100 to-teal-100 shadow-md">
        Detalhes do Pacote Turístico
    </h1>

    <div class="max-w-xl mx-auto bg-white rounded-xl shadow-lg p-8 border border-gray-200">
        <h4 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Informações do Pacote</h4>
        <hr class="mb-6 border-gray-200" />

        <dl class="space-y-4">
            <div class="flex flex-col sm:flex-row items-start sm:items-center py-2 px-3 bg-gray-50 rounded-lg">
                <dt class="w-full sm:w-1/3 text-gray-700 font-medium mb-1 sm:mb-0">
                    @Html.DisplayNameFor(model => model.PacoteTuristico.Titulo)
                </dt>
                <dd class="w-full sm:w-2/3 text-gray-900 font-bold">
                    @Html.DisplayFor(model => model.PacoteTuristico.Titulo)
                </dd>
            </div>

            <div class="flex flex-col sm:flex-row items-start sm:items-center py-2 px-3 bg-white rounded-lg">
                <dt class="w-full sm:w-1/3 text-gray-700 font-medium mb-1 sm:mb-0">
                    @Html.DisplayNameFor(model => model.PacoteTuristico.DataInicio)
                </dt>
                <dd class="w-full sm:w-2/3 text-gray-900">
                    @Html.DisplayFor(model => model.PacoteTuristico.DataInicio)
                </dd>
            </div>

            <div class="flex flex-col sm:flex-row items-start sm:items-center py-2 px-3 bg-gray-50 rounded-lg">
                <dt class="w-full sm:w-1/3 text-gray-700 font-medium mb-1 sm:mb-0">
                    @Html.DisplayNameFor(model => model.PacoteTuristico.CapacidadeMaxima)
                </dt>
                <dd class="w-full sm:w-2/3 text-gray-900">
                    @Html.DisplayFor(model => model.PacoteTuristico.CapacidadeMaxima)
                </dd>
            </div>

            <div class="flex flex-col sm:flex-row items-start sm:items-center py-2 px-3 bg-white rounded-lg">
                <dt class="w-full sm:w-1/3 text-gray-700 font-medium mb-1 sm:mb-0">
                    @Html.DisplayNameFor(model => model.PacoteTuristico.Preco)
                </dt>
                <dd class="w-full sm:w-2/3 text-gray-900 font-semibold text-lg">
                    @Html.DisplayFor(model => model.PacoteTuristico.Preco)
                </dd>
            </div>
        </dl>

        <div class="mt-8 text-center">
            <a asp-page="/Index" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg focus:outline-none focus:shadow-outline transition-colors duration-200 shadow-md hover:shadow-lg">
                Voltar para a Página Inicial
            </a>
        </div>
    </div>
</div>
